<resources>
  <style name="Base.Theme.AndroidFundamentalFirstSubmission" parent="Theme.Material3.DayNight">
    <!-- Primary colors (same as day mode) -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
    <item name="colorOnPrimary">@color/colorOnPrimary</item>

    <!-- Secondary colors (same as day mode) -->
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
    <item name="colorOnSecondary">@color/colorOnSecondary</item>

    <!-- Night mode surfaces -->
    <item name="colorSurface">@color/colorSurfaceDark</item>
    <item name="colorOnSurface">@color/colorOnSurfaceDark</item>

    <!-- Error colors (same as day mode) -->
    <item name="colorError">@color/colorError</item>
    <item name="colorOnError">@color/colorOnError</item>
  </style>

  <style name="Theme.AndroidFundamentalFirstSubmission"
    parent="Base.Theme.AndroidFundamentalFirstSubmission" />
